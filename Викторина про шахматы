while True:
    print("Привет!Давай сыграем в викторину:")
    
    asks = {
        "Сколько клеток на шахматной доске?": 64,
        "Сколько человек принимают участие в шахматной партии?": 2,
        "Сколько есть исходов игры для одного человек в шахматной партии?": 3,
        "Сколько у одного игрока пешек в начале партии?": 8,
        "Сколько всего фигур у одного игрока в начале партии?": 16}
    
    score = 0
    
    for i, j in asks.items():
        print(i)
        answer = int(input("Ваш ответ: "))
        if answer == j:
            print("Правильный ответ!")
            score += 1
        else:
            print("Увы, ответ неверный(")
    
    print("Вы набрали %s очка(ов) из 5" %score)
    
    b = input("Напиши Да, если хочешь попробовать ещё раз:")
    if b != "Да":
        break
